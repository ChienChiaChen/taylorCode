<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--ScrollView can host only one direct child-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_nation_end"
            android:layout_width="24dp"
            android:layout_height="16dp"
            android:layout_marginLeft="16dp" />

        <TextView
            android:id="@+id/tv_make_call_nation_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@+id/iv_nation_end"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="0sp"
            android:text="United State"
            android:textColor="#808080"
            android:textSize="12sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tv_callee_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/iv_nation_end"
            android:layout_below="@+id/iv_nation_end"
            android:layout_marginTop="14dp"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="0sp"
            android:text="+86 1350 182 6147"
            android:textColor="#383838"
            android:textSize="24sp"
            android:textStyle="normal" />

        <View
            android:id="@+id/divider1_end"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/tv_callee_end"
            android:background="#e5e5e5" />

        <TextView
            android:id="@+id/tv_call_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/divider1_end"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="19.5dp"
            android:fontFamily="sans-serif"
            android:gravity="end"
            android:lineSpacingExtra="2sp"
            android:text="00:00"
            android:textColor="#1a93f0"
            android:textSize="14sp"
            android:textStyle="normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_call_duration"
            android:layout_alignStart="@+id/iv_nation_end"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="0sp"
            android:text="Call duration: "
            android:textColor="#383838"
            android:textSize="14sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tv_cost_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/tv_call_duration"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="19.5dp"
            android:fontFamily="sans-serif"
            android:gravity="end"
            android:lineSpacingExtra="2sp"
            android:text="0"
            android:textColor="#383838"
            android:textSize="14sp"
            android:textStyle="normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_cost_end"
            android:layout_alignStart="@+id/iv_nation_end"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="0sp"
            android:text="Cost:"
            android:textColor="#383838"
            android:textSize="14sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tv_rest_coins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/tv_cost_end"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="19.5dp"
            android:fontFamily="sans-serif"
            android:gravity="end"
            android:lineSpacingExtra="2sp"
            android:text="1200"
            android:textColor="#383838"
            android:textSize="14sp"
            android:textStyle="normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_rest_coins"
            android:layout_alignStart="@+id/iv_nation_end"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="0sp"
            android:text="Rest of coins:"
            android:textColor="#383838"
            android:textSize="14sp"
            android:textStyle="normal" />

        <View
            android:id="@+id/divider2_end"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/tv_rest_coins"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="22dp"
            android:background="#e5e5e5" />

        <ImageButton
            android:id="@+id/iv_recall"
            android:layout_width="64dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/divider2_end"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="15.5dp"
            android:background="#0fbd86" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/divider2_end"
            android:layout_below="@+id/divider2_end"
            android:layout_marginTop="24.5dp"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="-2sp"
            android:text="Recall"
            android:textColor="#383838"
            android:textSize="16sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tv_more_conins"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/iv_recall"
            android:background="#f5f5f5"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="0sp"
            android:paddingBottom="6dp"
            android:paddingLeft="16dp"
            android:paddingTop="20dp"
            android:text="More coins"
            android:textColor="#383838"
            android:textSize="14sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_get_sign"
            android:layout_width="64dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/tv_more_conins"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:background="#1a93f0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/divider2_end"
            android:layout_below="@+id/tv_more_conins"
            android:layout_marginTop="24.5dp"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="-2sp"
            android:text="Sign"
            android:textColor="#383838"
            android:textSize="16sp"
            android:textStyle="normal" />

        <View
            android:id="@+id/divider3_end"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/btn_get_sign"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="22dp"
            android:background="#e5e5e5" />

        <Button
            android:id="@+id/btn_invite_friend"
            android:layout_width="64dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/divider3_end"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:background="#1a93f0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/divider2_end"
            android:layout_below="@+id/divider3_end"
            android:layout_marginTop="24.5dp"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="-2sp"
            android:text="Invite Friend"
            android:textColor="#383838"
            android:textSize="16sp"
            android:textStyle="normal" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="400dp"
            android:layout_below="@+id/btn_invite_friend"
            android:text="aabbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
            android:textSize="50sp" />
    </RelativeLayout>

</ScrollView>